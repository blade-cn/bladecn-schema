{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://blade-cn.github.io/bladecn-schema/registry.json",
  "description": "A bladecn registry of components, etc.",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "homepage": {
      "type": "string",
      "format": "uri"
    },
    "authors": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "description": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "lastUpdated": {
      "type": "string",
      "format": "date-time"
    },
    "items": {
      "type": "array",
      "items": {
        "$ref": "https://blade-cn.github.io/bladecn-schema/registry-item.json"
      }
    }
  },
  "required": ["name", "homepage", "description", "authors", "version", "lastUpdated", "items"]
}