{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://blade-cn.github.io/bladecn-schema/registry-item.json",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "version": {
      "type": "string"
    },
    "nodeDependencies": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "dependencies": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["block", "component", "page", "ui"]
          }
        },
        "required": ["path", "type"]
      }
    },
    "cssVars": {
      "type": "object",
      "patternProperties": {
        "^--[a-zA-Z0-9-_]+$": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["name", "type", "description", "version", "files"]
}
