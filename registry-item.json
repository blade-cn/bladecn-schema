{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": ["component", "plugin", "theme"]
    },
    "description": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "nodeDependencies": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "dependencies": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["component", "style"]
          }
        },
        "required": ["path", "type"]
      }
    },
    "cssVars": {
      "type": "array",
      "items": {
        "type": "object",
        "patternProperties": {
          "^--[a-zA-Z0-9-_]+$": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "required": ["name", "type", "description", "files"]
}
